<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvLugarViaje"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvFechaViaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvDescripcionViaje"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-46dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescripcionViaje"
            android:layout_width="342dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:maxLines="4"
            android:ellipsize="end"
           />

        <!-- Para aÃ±adir tres puntos cuando el texto no cab
        android:maxLines="1"
        android:ellipsize="end"
        -->



        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvDescripcionViaje"
            android:layout_marginBottom="14dp"
            android:text="@string/creado_por"
            android:textStyle="bold"
            tools:text="Creado por:" />

        <TextView
            android:id="@+id/tvCreador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginStart="107dp"
            android:text="TextView" />

    </RelativeLayout>
</android.support.v7.widget.CardView>