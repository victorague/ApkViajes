<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Views.ActivityRecientes">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvViajesRecientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvLimite"
        android:layout_centerHorizontal="true"
        android:text="¿Cuántos viajes quieres que se muestren?" />

    <EditText
        android:id="@+id/tvLimite"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rvViajesRecientes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-76dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="10" />
</RelativeLayout>